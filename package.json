    "lint": "next lint",
    "prepare:data": "tsx -r dotenv/config ./src/scripts/enhanced-prepare-docs.ts",
    "prepare:data:full": "tsx -r dotenv/config ./src/scripts/enhanced-prepare-docs.ts full",
    "process:malayalam": "tsx -r dotenv/config ./src/scripts/process-malayalam-docs.ts",
